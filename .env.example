# 基础配置
DEBUG_MODE=true
LOGURU_LEVEL=DEBUG

# 数据库配置
BIZ_DB_CONNECTION=sqlite:///./data/cost_tracking.db

# Redis配置
REDIS_CONNECTION=redis://localhost:6379/0

# JWT配置
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# 微信登录配置
WX_APPID=your_wechat_app_id
WX_APPSECRET=your_wechat_app_secret
WX_REDIRECT_URI=http://localhost:8000/api/auth/wechat/callback

# 应用配置
APP_NAME=Cost Tracking
APP_VERSION=1.0.0
APP_DESCRIPTION=物品成本计算器

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# 文件上传配置
MAX_UPLOAD_SIZE=5242880
